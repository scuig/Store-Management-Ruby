

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.purchase_date %></td>
        <td><%= link_to 'Detalles', purchase %></td>
        <td><%= link_to 'Editar', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Eliminar', purchase, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

