<%= form_for(@material) do |f| %>
  <% if @material.errors.any? %>
    <div id="error_explanation">
      <h2> No se permiti√≥ la captura del elemento por <%= pluralize(@material.errors.count, "error") %> </h2>

      <ul>
       <%@material.errors.messages.values.each do |msg| %>
