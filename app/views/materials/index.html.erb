
<%= image_tag "test.png" %>
<table>
  <thead>
    <tr>
      <th>Nombre:</th>
      <th>Disponible:</th>
      <th>Unidades:</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.available %></td>
        <td><%= material.unit.abbr %></td>
        <td><%= link_to 'Detalles', material %></td>
        <td><%= link_to 'Editar', edit_material_path(material) %></td>
        <td><%= link_to 'Borrar', material, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

